@page
@using Microsoft.AspNetCore.Hosting
@using Microsoft.Extensions.Hosting
@model Comments_page
@{
    ViewData["Title"] = "Comment Page";
}

@inject IWebHostEnvironment env

<body>

    <h3>Post comment</h3>


    <form method="post" asp-page-handler="Create">

        <input type="text" placeholder="Title" asp-for="NewComment.Name" />
        <br />
        <br />
        <textarea placeholder="Comment" cols="50" rows="10" asp-for="NewComment.Comment"></textarea>
        <button type="submit">Post</button>
        <br />

    </form>

    <div>
        <table border="1">
            <tr>
                <th>Username</th>
                <th>Time posted</th>
                <th>Title</th>
                <th>Comment</th>
            </tr>
            
        </table>
    </div>

</body>